{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"noEmit": true,
		"noEmitOnError": false,
		"jsx": "react-jsx",
		"paths": {
			"@/*": [
				"./src/*"
			],
		},
		"typeRoots": [
			"node_modules/@types",
			"types"
		]
	},
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
	"include": [
		"src",
		"src/**/*",
		".eslintrc.js",
		".prettierrc.js",
		"babel.config.js",
		"types/*.ts",
		"vite.config.ts",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
